# Backend Production Environment (example)
# Copy this file to backend/.env.production on the SERVER and fill in real secrets there.
# Do NOT commit real secrets to the repo.

ENV=production
PROJECT_NAME=Loom
API_V1_STR=/api
SECRET_KEY=REPLACE_WITH_RANDOM_64B_HEX
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# MongoDB
MONGO_URI=mongodb://USERNAME:PASSWORD@DB_HOST:27017/?authSource=admin
MONGO_DB=loom

# CORS
CORS_ORIGINS=["https://loom.studiodtw.net"]

# Email/SMTP (optional)
SMTP_HOST=
SMTP_PORT=465
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM="Loom <no-reply@studiodtw.net>"
